<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/meditation2.css" />
   

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Shrikhand&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('partials/hearder2') %>
    <!-- fin bar de navigation -->

    <!-- debut de la premiere partie -->
    <div class="section1">
      <div class="card"></div>
    </div>
    <% if (articles) { %>
    <h1>video gallery</h1>
    <div class="container">
      <% articles.forEach(function(article){ %>
        <% if (article.categorie === "meditation") { %>
      <input type="checkbox" id="click" />
      
      <div class="video-container">
        <label for="click" class="video">
          <img src="<%= article.image.replace(/\\/g, '/') %>" alt="" />
        </label>
       
      </div>

      <div class="popup-video">
        <video src="<%= article.video.replace(/\\/g, '/') %>" controls muted autoplay></video>
        <label class="yo" for="click">&times;</label>
      </div>

      <% } %> <!-- Ajout de cette accolade fermante -->
      <% }) %>
    </div>
    <!-- fin de la premiere partie -->
    
    <% } %>
    <!-- debut footer -->

    <%- include('partials/footer') %>
    <!-- fin footer -->
  </body>
</html>
